<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Notas"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <!-- Campo para ingresar el título de la nota -->
    <EditText
        android:id="@+id/edtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título de la nota"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:padding="12dp"/>

    <!-- Campo para ingresar el contenido de la nota -->
    <EditText
        android:id="@+id/edtNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu nota"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"
        android:padding="12dp"/>

    <!-- Botón para agregar la nueva nota -->
    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Nota"
        android:padding="12dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"/>

    <!-- ListView para mostrar las notas -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:paddingTop="16dp"/>

</LinearLayout>
